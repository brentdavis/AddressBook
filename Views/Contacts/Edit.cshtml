@model AddressBook.Models.Contact
@inject AddressBook.Services.Interfaces.IImageService _imageService

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h4>Edit Contact</h4>
    <hr />
    <div class="p-3 border border-2 shadow-lg bg-light">
        <form class="row g-3 p-2" asp-action="Edit" enctype="multipart/form-data">
            <div class="col-12 col-md-4">
                <img class="img-fluid" src="@_imageService.ConvertByteArrayToFile(Model.ImageData, Model.ImageType)" />
                <div class="mt-2">
                    <input asp-for="ImageFile" class="form-control" />
                </div>
            </div>
            <div class="col-12 col-md-8">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">Address 1</label>
                        <input asp-for="Address1" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">Address 2</label>
                        <input asp-for="Address2" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">City</label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">State</label>
                        <input asp-for="State" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">Zip Code</label>
                        <input asp-for="Zip" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label fw-bold">Phone</label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <input type="hidden" asp-for="ImageData" class="form-control" />
                    <input type="hidden" asp-for="ImageType" class="form-control" />
                    <input type="hidden" asp-for="Created" class="form-control" />
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="mt-2">
                    <input type="submit" value="Save" class="btn btn-primary text-end" />
                </div>
            </div>
        </form>
    </div>
    <div class="mt-2">
        <a asp-action="Index" class="btn btn-light">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
