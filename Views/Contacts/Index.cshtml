@model IEnumerable<AddressBook.Models.Contact>
@inject AddressBook.Services.Interfaces.IImageService _imageService

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex flex-column justify-content-center align-items-center">
    <h1>My Contacts</h1>

    <p class="mt-1">
        <a asp-action="Create" class="btn btn-secondary btn-lg">Create New</a>
    </p>
</div>

@foreach (var item in Model)
{
    <div class="d-flex flex-column align-items-center pt-3">
        <div class="card mb-3 shadow cardwidth">
            <div class="row g-0">
                <div class="col-md-4">
                    <img class="img-fluid rounded-start" src="@_imageService.ConvertByteArrayToFile(item.ImageData, item.ImageType)" />
                </div>
                <div class="col-md-8 ">
                    <div class="card-body">
                        <h5 class="card-title">@item.FullName</h5>
                        <div class="card-text">Email : @item.Email</div>
                        <div class="card-text">Phone : @item.Phone</div>
                        <div class="d-flex flex-row align-items-end">
                            <a asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi-pencil-fill"
                                   style="font-size: 1.5rem; color: black;"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi-person-fill"
                                   style="font-size: 1.5rem; color: black;"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi-trash-fill"
                                   style="font-size: 1.5rem; color: red;"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}